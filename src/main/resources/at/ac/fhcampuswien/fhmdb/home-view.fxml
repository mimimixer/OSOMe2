<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>


<VBox fx:id="box" prefHeight="620.0" prefWidth="1000" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.fhmdb.controllers.HomeController">
   <HBox alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="347.0" spacing="20.0" style="-fx-background-color: black;">
      <padding>
         <Insets bottom="7.0" left="10.0" top="7.0" />
      </padding>
      <children>
         <Label style="-fx-background-color: F5C518;" text="FHMDb">
            <font>
               <Font name="Calibri Bold" size="24.0" />
            </font>
            <padding>
               <Insets left="2.0" right="2.0" />
            </padding>
         </Label>
         <Label styleClass="text-white" stylesheets="@styles.css" text="Welcome to FHMDb!" />
         <JFXButton fx:id="showWatchlistBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Show Watchlist" onAction="#showWatchlistBtnClicked"/>
      </children>
   </HBox>
   <HBox spacing="5.0" styleClass="background-black" stylesheets="@styles.css">
      <children>
         <JFXButton fx:id="sortBtn" onAction="#sortBtnClicked" styleClass="background-yellow" stylesheets="@styles.css" text="Sort" />
         <TextField fx:id="searchField" prefHeight="25.0" prefWidth="170.0" promptText="Search FHMDb" />
         <JFXComboBox fx:id="genreComboBox" focusColor="#f5c518" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXComboBox fx:id="releaseYearComboBox" focusColor="#f5c518" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXComboBox fx:id="ratingComboBox" focusColor="#f5c518" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXButton fx:id="searchBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Filter" onAction="#searchBtnClicked"/>
         <JFXButton fx:id="resetBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Reset" onAction="#resetBtnClicked"/>

      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="20.0" left="10.0" top="20.0" />
      </padding>
   </HBox>

   <JFXListView fx:id="movieListView" prefHeight="213.0" prefWidth="482.0" style="-fx-background-color: black;" styleClass="background-black" stylesheets="@styles.css" VBox.vgrow="ALWAYS" />
</VBox>
